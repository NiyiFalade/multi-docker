{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions" : [
    {
      "name": "client",
      "image": "blackstar500/multi-client",
      "hostname":"client",
      "essential": false
    },
    {
      "name": "server",
      "image": "blackstar500/multi-server",
      "hostname":"api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "blackstar500/multi-worker",
      "hostname":"worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "blackstar500/nginx",
      "essential": true,
      "portMappings" :[
        {
          "hostPort":80,
          "containerPort": 80
        }
      ],
      "links": ["client", "server"]
    }

  ]
}
